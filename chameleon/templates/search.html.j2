{{define "title"}}
  {{ if .Query }}
    Search: {{ .Query }}
  {{ else }}
    Search
  {{ end }}
{{end}}

{{define "header"}}
  <h1>
    Search
  </h1>
{{end}}

{{define "content"}}
  <div class="container">
    <div class="row justify-content-center py-1">
      <form class=" col-4 row row-cols-lg-auto g-1">
        <div class="col-8">
          <input name="q" class="form-control" placeholder="query" value="{{.Query}}">
        </div>
        <div class="col">
          <button type="submit" class="btn btn-primary">search</button>
        </div>
      </form>
    </div>
  </div>
{{end}}

{{define "toc"}}
  {{ if .Query }}
    <div class="container-fluid text-light bg-dark text-center lead">
      {{ if not .Results }}
        No results
      {{ else }}
        <ul class="text-start list-unstyled" style="display: inline-block">
          {{ range .Results }}
            <li>
              <a href="{{ .URLs.Main }}" class="link-light">
                {{ .Title }}
              </a>
            </li>
          {{ end }}
        </ul>
      {{ end }}
    </div>
  {{ end }}
{{ end }}
