{{define "title"}}
  Statistics
{{end}}

{{define "header"}}
  <h1>
    Statistics
  </h1>
{{end}}

{{define "content"}}
  <h2>Views per page</h2>
  <div class="container">
    {{ $max := .Max }}
    {{ range .Stats }}
      <div class="row">
        <div class="col-4">
          {{ if .Category.Valid }}
            <i class="far fa-folder fa-fw"></i>
          {{ else }}
            <i class="far fa-file fa-fw"></i>
          {{ end }}
          <a href="{{ .URLs.Main }}">
            {{ .Article.Title }}
          </a>
        </div>
        <div class="col-1">
          {{ .Count }}
        </div>
        <div class="col">
          <div style="width: {{ percent .Count $max }}%; height: 1em" class="bg-dark">
          </div>
        </div>
      </div>
    {{ end }}
  </table>
{{end}}
